{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^check:cycles"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:ct": {
      "dependsOn": ["^test:ct"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "format:deps": {
      "dependsOn": ["^format:deps"],
      "cache": false
    },
    "check:deps": {
      "dependsOn": ["^check:deps"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "check:cycles": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["@repo/ui-tsup#build"],
      "cache": false,
      "persistent": true
    }
  },
  "boundaries": {
    "tags": {
      "public": {
        "dependencies": {
          "deny": ["internal"],
          "allow": ["public"]
        }
      },
      "private": {
        "dependencies": {
          "deny": ["public", "@repo/internal"]
        }
      }
    }
  }
}
