{
  "name": "turborepo-sandbox",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:ct": "turbo run test:ct",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-and-lint": "npx @biomejs/biome check .",
    "format-and-lint:fix": "npx @biomejs/biome check --write .",
    "check-types": "turbo run check-types",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.10",
    "knip": "^5.46.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.0.0-rc.36",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
